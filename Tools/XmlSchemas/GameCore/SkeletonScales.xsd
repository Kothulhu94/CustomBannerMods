<?xml version='1.0' encoding='UTF-8'?>
<xs:schema xmlns=""
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:msdata="urn:schemas-microsoft-com:xml-msdata" id="Scales">
  <xs:element name="Scales" msdata:IsDataSet="true">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" name="Scale">
          <xs:complexType>
            <xs:all>
              <xs:element minOccurs="1" maxOccurs="1" name="BoneScales">
                <xs:annotation>
                  <xs:appinfo>
                    <appSpecificNote>AlwaysPreferMerge</appSpecificNote>
                  </xs:appinfo>
                </xs:annotation>
                <xs:complexType>
                  <xs:sequence>
                    <xs:element maxOccurs="unbounded" name="BoneScale">
                      <xs:complexType>
                        <xs:attribute name="bone_name" type="xs:string" use="required"/>
                        <xs:attribute name="scale" type="xs:string" use="required"/>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
                <!-- bone_name attribute is unique for BoneScale -->
                <xs:unique name="BoneScale_unique_attribute">
                  <xs:selector xpath="BoneScale"/>
                  <xs:field xpath="@bone_name"/>
                </xs:unique>
              </xs:element>
            </xs:all>
            <xs:attribute name="id" type="xs:string" use="required"/>
            <xs:attribute name="skeleton" type="xs:string" use="required"/>
            <xs:attribute name="mount_sit_bone_scale" type="xs:string" use="optional"/>
            <xs:attribute name="mount_radius_adder" type="xs:decimal" use="optional"/>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>

    <!-- id attribute is unique for Scale -->
    <xs:unique name="Scale_unique_attribute">
      <xs:selector xpath="Scale"/>
      <xs:field xpath="@id"/>
    </xs:unique>

  </xs:element>
</xs:schema>
